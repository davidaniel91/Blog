 <p>
 	<strong>Title:</strong>
 	<%= @article.title %>
 </p>
 
 <p>
 	<strong>Text:</strong>
 	<%= @article.text %>
 </p>
 
 <h2>Comments</h2>
 <%= render @article.comments %>
 
 <H2>Add a comment:</H2>
 <%= form_for([@article, @article.comments.build]) do |f| %>
  <p>
   <%= f.label :commenter %><br>
   <%= f.text_field :commenter %>
  </p>
  <p>
   <%= f.label :body %><br>
   <%= f.text_area :body %>
  </p>
  <p>
   <%= f.submit %>
  </p>
  <% end %>
 <%= link_to 'Article List', articles_path %>